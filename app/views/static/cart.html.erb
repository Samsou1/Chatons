 <div class="container mx-auto mt-10">
    <div class="flex shadow-md my-10">
      <div class="w-3/4 bg-gray-700 px-10 py-10 rounded-lg">
        <div class="flex justify-between border-b pb-8">
          <h1 class="text-xl font-bold tracking-wider capitalize">Shopping Cart</h1>
        </div>
        <div class="flex justify-center mt-10 mb-5">
          <h3 class="text-center font-semibold text-gray-300 text-lg uppercase w-2/5 w-full">Products</h3>
        </div>
      <div class="flex flex-col -mx-8 px-6 bg-gray-800 rounded-lg">

        <% @items.keys.each_with_index do |item, index|%>
          <p class="text-xl">Photo n° <%=index + 1%></p>
          <h3>Title:</h3><p><%=item.title%></p>
          <h3>Description:</h3><p><%=item.description%></p>
          <h3>The&nbsp;unit&nbsp;price:</h3><p><%=item.price%></p>
          <h3>Qty:</h3><p><%=@items.values[index]%></p>
          <h3>Value:</h3><p><%= item.price * @items.values[index]%></p>
          <%=image_tag item.image_url, class: "rounded-lg my-8"%>
          <%= button_to 'Remove item', cart_item_path(Cartitem.where(item_id:item.id)[0]), method: :delete, class: "btn-warning mb-12" %>
          <hr class="mb-4">
        <%end%>

      </div>
      <div class="flex items-center justify-between mt-4 space-x-2">
      <div class="flex flex-col items-center">
        <h3>Total&nbsp;price:</h3><p class="text-2xl"><%=@total_price%>€</p>
      </div>
        <%= link_to 'Continue shopping', items_path, class: "btn" %>
        <%= button_to 'Pay now', checkouts_create_path, data: { turbo: false }, class: "btn" %>
      </div>
     </div>
  </div>
