<%# WARNING: THE CART SHOWED IN /CART IS MADE BY THE STATIC CONTROLER METHOD CART %>
<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-blue-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>
    <%= render @cart %>
    <%= link_to 'Edit this cart', edit_cart_path(@cart), class: "mt-2 rounded-lg py-3 px-5 bg-green-400 inline-block font-medium" %>
    <div class="inline-block ml-2">
      <%= button_to 'Delate this cart', cart_path(@cart), method: :delete, class: "mt-2 rounded-lg py-3 px-5 bg-red-400 font-medium" %>
    </div>
  </div>
</div>
<div class="flex justify-between items-center">
  <div class="container p-8 mx-auto mt-12 bg-gray-800">
    <div class="w-full overflow-x-auto">
      <div class="my-2">
        <h3 class="text-xl font-bold tracking-wider">Shopping Cart</h3>
      </div>
      <br>
      <ul>
        <% @items.each_with_index do |item, index|%>
          Photo n° <%=index + 1%>
          <%= button_to 'X', cart_item_path(@cartitems[index].id), method: :delete, class: " rounded-lg py-0.5 px-2 bg-red-400 font-medium ml-60" %>
          <li><%=item.title%></li>
          <li><%=item.description%></li>
          <li><%=item.price%></li>
          <li class="h-40 w-40"><%=image_tag item.image_url%></li>
          <%  @cartitems[index].id%>
          <br>
        <%end%><br>
        <br>
        Total price:<%=@total_price%>
      </ul>
      <div class="flex justify-end mt-4 space-x-2">
        <%= link_to 'Continue shopping', items_path, class: "ml-2 rounded-lg py-3 px-5 bg-blue-400 inline-block font-medium" %>
        <%= link_to 'Paiement', carts_path, class: "ml-2 rounded-lg py-3 px-5 bg-blue-400 inline-block font-medium" %>
      </div>
    </div>
  </div>
</div>
Items<br>
<% @items.each_with_index do |item, index|%>
  Item n° <%=index + 1%><br>
  <%=item.title%><br>
  <%=item.description%><br>
  <%=item.image_url%><br>
  <%=item.price%><br>
  <%  @cartitems[index].id%>
  <%= button_to 'Remove item', cart_item_path(@cartitems[index].id), method: :delete, class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 font-medium" %>
  <br>
<%end%><br>
<br>
