<%# WARNING: THE CART SHOWED IN /CART IS MADE BY THE STATIC CONTROLER METHOD CART %>
<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-blue-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>
    <%= render @cart %>
    <%= link_to 'Edit this cart', edit_cart_path(@cart), class: "btn" %>
    <div class="inline-block ml-2">
      <%= button_to 'Delate this cart', cart_path(@cart), method: :delete, class: "btn" %>
    </div>
  </div>
</div>
<div class="container mx-auto mt-10">
    <div class="flex shadow-md my-10">
      <div class="w-3/4 bg-gray-700 px-10 py-10">
        <div class="flex justify-between border-b pb-8">
          <h1 class="text-xl font-bold tracking-wider capitalize">Shopping Cart</h1>
        </div>
        <div class="flex mt-10 mb-5">
          <h3 class="font-semibold text-gray-500 text-xs uppercase w-2/5">Product Details</h3>
        </div>
      <div class="flex items-center hover:bg-gray-700 -mx-8 px-6 py-5">
        <ul>
        <% @items.each_with_index do |item, index|%>
          Photo n° <%=index + 1%>
          <%= button_to 'X', cart_item_path(@cartitems[index].id), method: :delete, class: "btn" %>
          <li><%=item.title%></li>
          <li><%=item.description%></li>
          <li><%=item.price%></li>
          <li class="h-40 w-40"><%=image_tag item.image_url%></li>
          <%  @cartitems[index].id%>
          <br>
        <%end%><br>
        <br>
        Total price:<%=@total_price%>
      </ul>
      <div class="flex justify-end mt-4 space-x-2">
        <%= link_to 'Continue shopping', items_path, class: "btn" %>
        <%= button_to 'Pay now', checkouts_create_path, data: { turbo: false }, class: "btn" %>
      </div>
    </div>
  </div>
</div>
Items<br>
<% @items.each_with_index do |item, index|%>
  Item n° <%=index + 1%><br>
  <%=item.title%><br>
  <%=item.description%><br>
  <%=item.image_url%><br>
  <%=item.price%><br>
  <%  @cartitems[index].id%>
  <%= button_to 'Remove item', cart_item_path(@cartitems[index].id), method: :delete, class: "btn" %>
  <br>
<%end%><br>
<br>
