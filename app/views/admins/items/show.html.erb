<div class="w-full">

  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex flex-col justify-between items-center">
    <h1 class="font-bold text-4xl">Produits</h1>
    <%= link_to 'Create a product', admins_items_new_path, class: "text-center text-white font-bold py-3 px-5 rounded bg-green-500 hover:bg-green-400 focus:outline-none mt-4 cursor-pointer" %>
    <%= link_to 'Back to index', admins_index_path, class: "text-center text-white font-bold py-3 px-5 rounded bg-green-500 hover:bg-green-400 focus:outline-none mt-4 cursor-pointer" %>
  </div>

  <div id="items" class="w-full flex flex-wrap justify-evenly items-end">
    <%= render @adminitems %>
  </div>
</div>
