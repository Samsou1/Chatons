<div id="<%= dom_id item %>" class="w-5/6 sm:w-5/6 md:w-2/3 lg:w-5/12 xl:w-1/4 lg:mx-2 sm:my-8 flex flex-col items-center justify-between p-4 my-4 rounded-lg xs:bg-gradient-to-r from-pink-500 to-pink-700 sm:bg-gradient-to-r from-cyan-500 to-cyan-700 md:bg-gradient-to-r from-pink-500 to-pink-700 lg:bg-gradient-to-r from-cyan-500 to-cyan-700 xl:bg-gradient-to-r from-pink-500 to-pink-700 2xl:bg-gradient-to-r from-cyan-500 to-cyan-700">
  <h3 class="mt-4">Name:</h3>
  <p><%= item.title %></p>
  <h3 class="mt-4">Description:</h3>
  <p class="capitalize"><%= item.description %></p>
  <h3 class="mt-4">Price:</h3>
  <p><%= item.price  %></p>
  <%if item.image.attached?%>
    <%= image_tag item.image, class: "max-h-[300px] rounded-lg", alt: 'Photographie' %>
  <%else%>
    <%= form_tag item_images_path(item), multipart: true do %>
      <%= file_field_tag :image %>
      <%= submit_tag "Modifier l'illustration" %>
    <% end %>
  <%end%>
  <div class="flex justify-center">
    <% if action_name != "show" %>
      <%= link_to "Show this item", item, class: "btn" %>
      <% if user_signed_in? %>
        <%= button_to 'Add to cart', cart_items_path, method: :post, params: {item: item}, class: "btn" %>
      <% end %>
      <hr class="mt-6">
    <% end %>
  </div>
</div>
