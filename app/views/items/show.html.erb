<div class="w-full sm:w-5/6 md:w-2/3 lg:w-1/2 sm:my-8 flex flex-col items-center ">

  <% if notice.present? %>
    <p class="py-2 px-2 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <%= render @item %>
  <%#= link_to 'Edit this item', edit_item_path(@item), class: "btn" %>
  <%#= button_to 'Destroy this item', item_path(@item), method: :delete, class: "btn" %>
  <div class="flex flex-col items-center justify-center sm:flex-row sm:my-8 lg:justify-around">
    <%= link_to 'Add to cart', items_path, class: "btn" %>
    <%= link_to 'Back to pictures', items_path, class: "btn" %>
  </div>
</div>
