<section class="flex flex-col items-center justify-center h-screen bg-slate-100 flex-1 w-screen">
  <div class="lg:p-16 lg:bg-white lg:shadow-lg">
    <h2 class="text-center text-4xl font-bold pb-8">Log in</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div>
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, placeholder: "your@email.com", autocomplete: "email", class: "lg:w-96" %>
      </div>

      <div class="mt-3">
        <%= f.label :password %><br />
        <%= f.password_field :password, placeholder: "************", autocomplete: "current-password", class: "lg:w-96" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div>
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="w-full text-center text-white font-bold py-3 rounded bg-green-500 hover:bg-green-400 focus:outline-none mt-8 cursor-pointer">
        <%= f.submit "Log in", class: "cursor-pointer" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</section>
