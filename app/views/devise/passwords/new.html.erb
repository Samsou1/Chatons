<section class="flex flex-col items-center justify-center h-screen flex-1">
  <div class="p-10 md:w-[500px]">
    <h2 class="text-center text-4xl font-bold pb-8">Forgot your password?</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div>
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, placeholder: "your@email.com", autocomplete: "email", class: "text-gray-800 w-full" %>
      </div>

      <div>
        <%= f.submit "Reset password", class: "w-full text-center text-white font-bold py-3 rounded bg-green-500 hover:bg-green-400 focus:outline-none mt-4 cursor-pointer" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</section>
