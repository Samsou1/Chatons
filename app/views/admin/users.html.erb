<h1 class="text-center text-4xl font-bold pt-16 pb-5">Administrator</h1>
<%= render 'admin/nav_links' %>
<div class="w-full flex flex-wrap justify-evenly items-end mt-28">
<% @users.each do |user| %>
  <div class="w-full sm:w-5/6 md:w-2/3 lg:w-5/12 xl:w-1/4 lg:mx-2 sm:my-8 flex flex-col items-center justify-between p-4 my-4 rounded-lg bg-rose-600 sm:bg-cyan-600 md:bg-rose-600 lg:bg-cyan-600 xl:bg-rose-600 2xl:bg-cyan-600">
    <h3 class="mt-4">Email:</h3>
    <p><%= user.email %></p>
    <h3 class="mt-4">Name</h3>
    <p><%= user.first_name %> <%= user.last_name %></p>
    <h3 class="mt-4">Address:</h3>
    <p><%= user.address %></p>
    <h3 class="mt-4">City:</h3>
    <p><%= user.city %></p>
    <h3 class="mt-4">Role:</h3>
    <p><%= user.role %></p>
    <div class="flex justify-center">
      <%= link_to 'Edit', user_path(user), class: "btn" %>
      <%= button_to 'Delete', user_path(user), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn" %>
    </div>
  </div>
<% end %>
</div>
