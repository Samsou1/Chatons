<h1 class="text-center text-4xl font-bold pt-16 pb-5">Administrator</h1>
<%= render 'admin/nav_links' %>
<div class="w-full flex flex-wrap justify-evenly items-end">
<% @items.each do |item| %>
  <div class="w-full sm:w-5/6 md:w-2/3 lg:w-5/12 xl:w-1/4 lg:mx-2 sm:my-8 flex flex-col items-center justify-between p-4 my-4 rounded-lg bg-rose-600 sm:bg-cyan-600 md:bg-rose-600 lg:bg-cyan-600 xl:bg-rose-600 2xl:bg-cyan-600">
    <h3 class="mt-4">Name:</h3>
    <p><%= item.title %></p>
    <h3 class="mt-4">Description:</h3>
    <p class="capitalize"><%= item.description %></p>
    <h3 class="mt-4">Price:</h3>
    <p><%= item.price  %></p>
    <%= image_tag item.image_url, class: "my-2 rounded-lg mt-4 shadow-lg max-h-72" %>
    <div class="flex justify-center">
      <%= link_to 'Edit', edit_item_path(item), class: "btn" %>
      <%= link_to 'Create', new_item_path, class: "btn" %>
      <%= button_to 'Delete', item_path(item), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn" %>
    </div>
  </div>
<% end %>
</div>
